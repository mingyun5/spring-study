<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="org.study.board.mapper.BoardMapper">
  	<insert id="create">
  		insert into tbl_board (title, content, writer)
  		values (#{title}, #{content},#{writer})
  	</insert>
  	<!-- rseultType을 mybatis-config.xml에 typeAliases를 추가하여 줄여 쓸수 있다. -->
  	<select id="read" resultType="BoardVO">
  		select * from tbl_board where bno = #{bno}
  	</select>
  	
  	<update id="update">
  		update tbl_board set title = #{title}, content = #{content} where bno = #{bno}
  	</update>
  	<delete id="delete">
  		delete from tbl_board where bno = #{bno}
  	</delete>
  	<select id="listAll" resultType="org.study.board.model.BoardVO">
  		<!-- '>'닫히는 태그로 인해  <![CDATA[~~~]]> 태그안에 들어가면 xml문법이라는 표시-->
  		<![CDATA[ 
  			select * from tbl_board
  			where bno > 0 order by bno desc, regdate desc
  		]]>
  	</select>
  	
  </mapper>
